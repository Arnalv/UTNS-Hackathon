<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Producteen</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="style.css" rel="stylesheet">
  </head>
  <body> 
    <%- include("navbar.ejs") %>
    <div class="container-fluid">
        <div class="row">
          <div class="col-7" id="cover">
            <h1 id="title-2">The Motivational Scheduler</h1>
          </div>
          <div class="col-5">
            <img src="schedule-icon.png" id="img">
          </div>
        </div>
        <div class="row">
          <div class="col-12 cover-buttons text-center">
            <a href="login"><button type="button" class="btn btn-outline-primary">Log In</button></a>
            <a href="/register"><button type="button" class="btn btn-primary">Sign Up</button></a>
          </div>
        </div>
    </div>
    
    <!-- <div id="cover">
      
    </div> -->
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <script>
      function onload_file() {
        const text = document.getElementById("title-2");
        const img = document.getElementById("img");
        let opacity_1 = 0;
        const fade = setInterval(function() {
          if (opacity_1 >= 1) {
            clearInterval(fade);  // Stop the interval once opacity reaches 1
          } else {
            opacity_1 += 0.01;  // Increment the opacity
            text.style.opacity = opacity_1;  // Apply the new opacity
            img.style.opacity = opacity_1;
          }
        }, 25);  // Set the interval to execute every 20ms
      }
      onload_file()
    </script>
  </body>
</html>